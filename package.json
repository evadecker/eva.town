{
  "name": "eva.town",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "astro dev",
    "build": "astro check && astro build --remote",
    "preview": "astro preview",
    "check": "astro check && biome check",
    "check:fix": "astro check && biome check --write",
    "stylelint": "npx stylelint '**/*.{css,scss,astro}'",
    "test": "playwright test",
    "prettier": "prettier --write .",
    "html-validate": "pnpm build && pnpm exec html-validate dist/*.html",
    "prepare": "husky",
    "check-links": "lychee --config .lychee.toml ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/db": "0.17.1",
    "@astrojs/markdown-remark": "^6.3.5",
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/netlify": "^6.5.6",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@astrojs/sitemap": "^3.4.2",
    "@nanostores/react": "^1.0.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "astro": "^5.12.9",
    "astro-expressive-code": "^0.41.3",
    "astro-font": "^1.1.0",
    "astro-loading-indicator": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "fathom-client": "^3.7.2",
    "howler": "^2.2.4",
    "markdown-it": "^14.1.0",
    "motion": "^12.23.12",
    "nanoid": "^5.1.5",
    "nanostores": "^1.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-imgattr": "^1.0.5",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@biomejs/biome": "^2.1.4",
    "@playwright/test": "^1.54.2",
    "@radix-ui/colors": "^3.0.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^24.2.1",
    "hastscript": "^9.0.1",
    "html-validate": "^10.0.0",
    "husky": "^9.1.7",
    "postcss-html": "^1.8.0",
    "sass": "^1.90.0",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "^5.9.2"
