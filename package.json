{
  "name": "eva.town",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "astro dev",
    "build": "astro check && astro build --remote",
    "preview": "astro preview",
    "check": "astro check && biome check",
    "check:fix": "astro check && biome check --write",
    "stylelint": "npx stylelint '**/*.{css,scss,astro}'",
    "test": "playwright test",
    "prettier": "prettier --write .",
    "html-validate": "pnpm build && pnpm exec html-validate dist/*.html",
    "prepare": "husky",
    "check-links": "lychee --config .lychee.toml ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/db": "^0.14.5",
    "@astrojs/markdown-remark": "^6.0.1",
    "@astrojs/mdx": "^3.1.9",
    "@astrojs/netlify": "^5.5.4",
    "@astrojs/react": "^4.1.2",
    "@astrojs/rss": "^4.0.11",
    "@astrojs/sitemap": "^3.2.1",
    "@nanostores/react": "^0.8.4",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "astro": "^4.16.18",
    "astro-expressive-code": "^0.38.3",
    "astro-font": "^0.1.81",
    "astro-loading-indicator": "^0.7.0",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "fathom-client": "^3.7.2",
    "framer-motion": "^11.15.0",
    "howler": "^2.2.4",
    "markdown-it": "^14.1.0",
    "nanoid": "^5.0.9",
    "nanostores": "^0.11.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-imgattr": "^1.0.5",
    "sanitize-html": "^2.14.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.49.1",
    "@radix-ui/colors": "^3.0.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^22.10.5",
    "hastscript": "^9.0.0",
    "html-validate": "^8.27.0",
    "husky": "^9.1.7",
    "postcss-html": "^1.7.0",
    "sass": "^1.83.1",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "typescript": "^5.7.2"
  }
