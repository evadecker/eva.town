{
  "name": "eva.town",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18.17.1"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "astro dev",
    "build": "astro check && astro build --remote",
    "preview": "astro preview",
    "check": "astro check && biome check",
    "check:fix": "astro check && biome check --write",
    "stylelint": "npx stylelint '**/*.{css,astro}'",
    "stylelint:fix": "npx stylelint '**/*.{css,astro}' --fix",
    "test": "playwright test",
    "prettier": "prettier --write .",
    "html-validate": "pnpm build && pnpm exec html-validate dist/*.html",
    "prepare": "husky",
    "check-links": "lychee --config .lychee.toml ."
  },
  "dependencies": {
    "@astrojs/check": "^0.9.6",
    "@astrojs/db": "0.18.3",
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/netlify": "^6.6.3",
    "@astrojs/react": "^4.4.2",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.1",
    "@nanostores/react": "^1.0.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.16.8",
    "astro-expressive-code": "^0.41.5",
    "astro-loading-indicator": "^0.7.1",
    "autoprefixer": "^10.4.23",
    "classnames": "^2.5.1",
    "cssnano": "^7.1.2",
    "dayjs": "^1.11.19",
    "fathom-client": "^3.7.2",
    "howler": "^2.2.4",
    "markdown-it": "^14.1.0",
    "motion": "^12.25.0",
    "nanoid": "^5.1.6",
    "nanostores": "^1.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-imgattr": "^1.0.5",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@biomejs/biome": "^2.3.11",
    "@playwright/test": "^1.57.0",
    "@radix-ui/colors": "^3.0.0",
    "@types/howler": "^2.2.12",
    "@types/node": "^25.0.6",
    "hastscript": "^9.0.1",
    "html-validate": "^10.5.0",
    "husky": "^9.1.7",
    "postcss-html": "^1.8.0",
    "stylelint": "^15.11.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5.9.3"
  }
}
