---
import { getCollection } from "astro:content";

import Center from "../components/Center.astro";
import Synth from "../components/Synth/Synth.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const work = await getCollection("work");
const posts = await getCollection("posts");

const feed = work
  .map((project) => project.data)
  .concat(
    posts.map((post) => ({
      title: post.data.title,
      description: post.data.description,
      year: post.data.datePublished.getFullYear(),
      url: `/posts/${post.id}`,
      category: ["writing"],
    })),
  )
  .sort((a, b) => b.year - a.year);
---

<BaseLayout
  title="Eva Decker"
  description="Eva is a designer and web developer based in NYC."
  includeFooter
>
  <Center>
    <section class="home">
      <h1 class="visuallyhidden">Eva designs and builds for the web</h1>
      <div class="intro">
        <p>
          <strong><a href="/about" class="inline-link">Eva Decker</a></strong> is
          a design engineer who likes playing piano and writing CSS. Currently living
          in NYC with <span class="nowrap"
            ><a role="button" data-sam-button>Samwise</a>.</span
          >
        </p>
      </div>
      <div class="synth">
        <Synth />
      </div>
    </section>
    <section class="work">
      <h2 class="visuallyhidden">Work</h2>
      <ul class="work-list">
        {
          feed.map((project) => (
            <li class="work-item">
              <a href={project.url}>
                <h3 class="work-title">{project.title}</h3>
                <span class="work-category">
                  {project.category.sort().join(", ")}
                </span>
                <span class="work-year">{project.year}</span>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </Center>
</BaseLayout>

<script>
  import * as Fathom from "fathom-client";
  import { addSam } from "../stores/sam";

  function setupSam() {
    const samButton = document.querySelector("[data-sam-button]");
    samButton?.addEventListener("click", () => addSam());
  }

  setupSam();

  document.addEventListener("astro:after-swap", () => setupSam());

  document.addEventListener("astro:page-load", () => {
    document
      .querySelector("[data-sam-button]")
      ?.addEventListener("click", () => {
        Fathom.trackEvent("stickers: add sam");
      });

    document.querySelector("[data-sam-shoo]")?.addEventListener("click", () => {
      Fathom.trackEvent("stickers: shoo sam");
    });
  });
</script>

<style>
  .visuallyhidden {
    clip: rect(0 0 0 0);
    clip-path: inset(50%);
    height: 1px;
    overflow: hidden;
    position: absolute;
    white-space: nowrap;
    width: 1px;
  }

  .home {
    display: flex;
    flex-direction: column;
    gap: var(--space-3xl);
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg);
    }

    100% {
      transform: rotate(360deg);
    }
  }

  .intro {
    padding-block-start: var(--space-2xl);
    text-wrap: balance;
    user-select: none;

    p {
      font-size: var(--step-4);
      letter-spacing: var(--letter-spacing-condensed);
      line-height: var(--line-height-tight);
    }
  }

  .synth {
    display: flex;
    align-items: center;
    justify-content: center;

    @media (width > 640px) {
      background: var(--gray-3);
      border-radius: var(--radius-m);
      padding: var(--space-xl) var(--space-l);
    }
  }

  [data-sam-button] {
    cursor: pointer;

    &:active {
      transform: scale(0.95);
    }
  }

  .work {
    padding-block: var(--space-2xl);
  }

  .work-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
  }

  .work-item {
    .work-title {
      grid-area: title;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
    }

    .work-category {
      grid-area: category;
    }

    .work-year {
      grid-area: year;
      font-variant-numeric: tabular-nums;
    }

    a {
      display: grid;
      grid-template-columns: 1fr auto auto;
      grid-template-areas: "title category year";
      gap: var(--space-m);
      text-decoration: none;
      padding-block: var(--space-s);

      * {
        font-size: var(--step-0);
        font-weight: var(--font-weight-normal);
        line-height: var(--line-height-body);
        transition: font-weight 0.2s ease-in-out;
      }

      &:hover * {
        font-weight: var(--font-weight-bold);
      }
    }

    &:not(:last-child) {
      border-block-end: 1px solid var(--gray-4);
      margin-block-end: -1px;
    }
  }
</style>
