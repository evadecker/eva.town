---
import { RelativeDate } from "./RelativeDate/RelativeDate";

interface Props {
  url: string;
  title: string;
  description?: string;
  datePublished?: Date;
}

const { url, title, description, datePublished } = Astro.props;
---

<div class="post">
  {
    datePublished && (
      <div class="date">
        <RelativeDate date={datePublished} client:load />
      </div>
    )
  }
  <a href={url} class="title">{title}</a>
  <span class="description">{description}</span>
</div>

<style lang="scss">
  .post {
    display: flex;
    flex-direction: column;
    gap: var(--space-2xs);
  }

  .date {
    color: var(--gray-11);
    font-size: var(--step--1);
  }

  .title {
    font-size: var(--step-1);
    line-height: 1.3;
    align-self: flex-start;
  }
</style>
