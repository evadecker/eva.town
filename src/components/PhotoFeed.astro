---
import { getCollection } from "astro:content";

const LIMIT = 12;

const entries = await getCollection("photos");
const limitedEntries = entries.slice(0, LIMIT);

const photos = limitedEntries.map((entry) => entry.data);
---

<ul class="photo-feed">
  {
    photos.map((photo) => (
      <li>
        <a href={photo.url}>
          <img src={photo.image?.url} alt={photo.title} />
        </a>
      </li>
    ))
  }
  <li class="see-all">
    <a href="https://glass.photo/evadecker">See all photos</a>
  </li>
</ul>

<style>
  .photo-feed {
    list-style: none;
    display: flex;
    gap: var(--space-xs);
    padding-inline: var(--space-xl);
    padding-block: var(--space-2xs) var(--space-l);
    margin: 0;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-padding: var(--space-xl);
    scrollbar-width: thin;
  }

  li {
    display: inline-block;
    padding: 0;
    flex-shrink: 0;
    scroll-snap-align: start;
    view-timeline-name: --photo;
    view-timeline-axis: inline;
  }

  a {
    display: block;
    height: 220px;
    width: auto;
  }

  img {
    display: block;
    height: 100%;
    width: auto;
    object-fit: cover;
    background-color: var(--gray-3);
  }

  .see-all a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding-inline: var(--space-2xl);
    background-color: var(--gray-3);
    transition: background-color, color, font-weight, text-decoration;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;

    @media (hover: hover) {
      &:hover {
        background-color: var(--gray-4);
      }
    }
  }
</style>
