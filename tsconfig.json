{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "module": "ES6",
    "target": "ES6",
    "typeRoots": ["./src/types", "./node_modules/@types", "./public/scripts"],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "extends": "astro/tsconfigs/strict",
  "include": [
    "astro.config.ts",
    ".eslintrc.js",
    "./src/types/*.d.ts",
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
