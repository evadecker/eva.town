{
  "extends": ["html-validate:recommended"],
  "rules": {
    "attr-case": "off",
    "void-style": "off",
    "element-permitted-content": "off",
    "no-autoplay": "off",
    "no-inline-style": "off",
    "no-trailing-whitespace": "off",
    "prefer-native-element": [
      "error",
      {
        "exclude": ["button"]
      }
    ]
  }
}
